@model IEnumerable<tryProject.Models.CommunityWorks>

@{
    ViewData["Title"] = "Index";
}

<head>
    <link rel="stylesheet" href="~/css/community.css" />
</head>

<div class="comunity">
    <h1>Where would <span>You</span> like to voulnteer</h1>
    <div class="tData">
        <p>
            <a asp-action="Create">Create New</a>
        </p>

        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Decscription)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Association)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>

                        <td>
                            @Html.DisplayFor(modelItem => item.Decscription)
                        </td>
                        <td>
                            <ul>
                                @foreach (var c in item.Association)
                                {
                                    <li> @c.Name</li>
                                }
                            </ul>

                        </td>

                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>