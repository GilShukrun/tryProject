@model tryProject.Models.MoneyDonation

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>MoneyDonation</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Sum" class="control-label"></label>
                <input asp-for="Sum" class="form-control" />
                <span asp-validation-for="Sum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Purpose" class="control-label">choose a purpose you want to donate for</label>
                <select asp-for="Purpose">
                    <option value="Medical Research">Medical Research</option>
                    <option value="Research">Research</option>
                    <option value="Global">Global</option>
                    <option value="People in need">People in need</option>
                </select>
                <span asp-validation-for="Purpose" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
